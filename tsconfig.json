{
    "compilerOptions": {
        "module": "esnext",
        "esModuleInterop": true,
        "target": "ES2022",
        "moduleResolution": "node",
        "sourceMap": true,
        "outDir": "./dist",
        "rootDir": "./src",
        "strict": true,
        "resolveJsonModule": true,
        "noImplicitAny": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "types": ["node", "jest"],
        "allowSyntheticDefaultImports": true,
        "declaration": true,
        "declarationMap": true,
        "isolatedModules": true,
        "lib": ["ES2022", "DOM"]
    },
    "include": ["src/**/*.ts"],
    "exclude": ["node_modules", "dist"]
}